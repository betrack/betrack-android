<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cranio.betrack.activities.NfcActivity"
    tools:showIn="@layout/app_bar_nfc">

    <ImageView
        android:layout_width="300sp"
        android:layout_height="300sp"
        android:src="@drawable/nfc"
        android:id="@+id/searchTag"
        android:layout_marginTop="50sp"
        android:layout_below="@+id/detectedBarrilTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="46dp"
        android:id="@+id/putDeviceNearTV"
        android:text="Acerque su dispositivo al barril"
        android:layout_below="@+id/searchTag"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Barril detectado"
        android:visibility="gone"
        android:id="@+id/detectedBarrilTV"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/tickFound"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="gone"
        android:text="Buscando datos..."
        android:id="@+id/searchingForDataTV"
        android:layout_below="@+id/tickFound"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/forma_16"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tickFound" />



</RelativeLayout>
