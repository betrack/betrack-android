<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cranio.betrack.activities.BeerMoreDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/goldenAlePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:src="@drawable/golden_ale" />

            <TextView
                android:id="@+id/beerTypeMoreData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/goldenAlePicture"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="Patagonia Golden Ale"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/rnpa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/beerTypeMoreData"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="RNPA 12000456"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/beerDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rnpa"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:text="Cerveza Rubia Liviana"
                android:textSize="23sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/beerAlcoholNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,5%"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_below="@+id/beerDescription"
                android:layout_alignLeft="@+id/elaborationDateTV"
                android:layout_alignStart="@+id/elaborationDateTV"
                android:layout_marginTop="27dp" />

            <TextView
                android:id="@+id/beerIBUNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,2"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_above="@+id/elaborationDateTV"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcohol"
                android:textSize="18sp"
                android:layout_above="@+id/beerIBUNumber"
                android:layout_alignRight="@+id/beerAlcoholNumber"
                android:layout_alignEnd="@+id/beerAlcoholNumber" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IBU"
                android:textSize="18sp"
                android:layout_alignTop="@+id/textView"
                android:layout_toRightOf="@+id/elaborationDate"
                android:layout_toEndOf="@+id/elaborationDate" />

            <TextView
                android:id="@+id/elaborationDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/beerAlcoholNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="Fecha de elaboraciÃ³n:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/elaborationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elaborationDateTV"
                android:layout_centerHorizontal="true"
                android:text="22/10/2016"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/expirationDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/elaborationDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="Fecha de vencimiento:"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/expirationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expirationDateTV"
                android:layout_centerHorizontal="true"
                android:text="22/12/2016"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/lotNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expirationDate"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="Lote: 5"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentario:"
                android:textSize="15sp"
                android:textStyle="italic"
                android:id="@+id/commentTv"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="16sp"
                android:layout_below="@id/lotNumber"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/commentTv"
                android:textStyle="italic"
                android:layout_marginLeft="16sp"
                android:id="@+id/comments"
                android:textSize="15sp"/>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
