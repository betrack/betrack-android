<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff">

    <TextView
        android:id="@+id/PuntuacionTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="PuntuaciÃ³n"
        android:textStyle="bold"
        android:layout_marginBottom="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/star1"
        android:layout_alignStart="@+id/star1" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_star_outline"
        android:layout_below="@+id/PuntuacionTV"
        android:layout_toRightOf="@+id/star2"
        android:layout_toEndOf="@+id/star2" />


    <ImageView
        android:id="@+id/star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toggle_star_outline"
        android:layout_alignTop="@+id/star3"
        android:layout_alignRight="@+id/comentarios"
        android:layout_alignEnd="@+id/comentarios" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star1"
        android:src="@drawable/ic_toggle_star_outline"
        android:layout_alignTop="@+id/star2"
        android:layout_alignLeft="@+id/comentarios"
        android:layout_alignStart="@+id/comentarios" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star4"
        android:src="@drawable/ic_toggle_star_outline"
        android:layout_above="@+id/comentarios"
        android:layout_toRightOf="@+id/star3"
        android:layout_toEndOf="@+id/star3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star5"
        android:src="@drawable/ic_toggle_star_outline"
        android:layout_alignTop="@+id/star4"
        android:layout_toRightOf="@+id/star4"
        android:layout_toEndOf="@+id/star4" />

    <TextView
        android:id="@+id/comentarios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_below="@+id/star3"
        android:layout_marginTop="20dp"
        android:text="Comentarios" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comentarios"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="16sp"
        android:layout_marginRight="16sp"
        android:padding="5sp"
        android:background="@drawable/background_et"
        android:layout_marginBottom="10sp"/>


    <Button
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:background="@drawable/vaciarbarril"
        android:id="@+id/sendBtn"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:background="@drawable/vaciarbarril"
        android:textColor="#fff"
        android:id="@+id/cancelBtn"
        android:layout_marginBottom="20sp"
        android:layout_alignTop="@+id/sendBtn"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />
</RelativeLayout>