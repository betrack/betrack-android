<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cranio.betrack.activities.OwnerMoreData">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bewery"
        android:id="@+id/ownerlogo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerveceria Barba Roja"
        android:id= "@+id/ownerName"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ownerlogo"
        android:layout_marginTop="10sp"
        android:textSize="25sp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyName"
        android:layout_below="@id/ownerName"
        android:textSize="18sp"
        android:text="Barba Roja S.R.L"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cuit"
        android:layout_below="@id/companyName"
        android:textSize="18sp"
        android:text="CUIT 20-485490-9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownerAddress"
        android:layout_below="@id/cuit"
        android:textSize="18sp"
        android:text="Avenida J. B. Justo 1456"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownerMail"
        android:background="@drawable/vaciarbarril"
        android:text="info@barbaroja.com"
        android:textColor="#fff"
        android:paddingLeft="5sp"
        android:paddingRight="5sp"
        android:layout_below="@id/ownerAddress"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ownerPhone"
        android:background="@drawable/vaciarbarril"
        android:text="1564569098"
        android:textColor="#fff"
        android:layout_below="@id/ownerMail"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"/>



</RelativeLayout>
